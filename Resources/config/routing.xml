<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="_forum_group_create" pattern="/group/{group}/forum/create/{gadget}">
        <default key="_controller">SocietoForumPlugin:Forum:create</default>
    </route>

    <route id="_forum_create" pattern="/forum/create/{gadget}">
        <default key="_controller">SocietoForumPlugin:Forum:create</default>
    </route>

    <route id="_forum_comment_create" pattern="/forum/{forum}/comment/{gadget}">
        <default key="_controller">SocietoForumPlugin:Forum:addComment</default>
    </route>
</routes>
